set -o errexit
set -o nounset
set -o pipefail
set -e
set -x

REPO_ROOT="$(git rev-parse --show-toplevel)"
CMD=${REPO_ROOT}/dev/tools/controllerbuilder
INSTRUCTION_PATH=${CMD}/cmd/codebot/examples/mockgcp-test-case/1-create-test.md

cd ${REPO_ROOT}/mockgcp

# It is cleaner and saver to use different repos for tooling code and resource code.
dest_repo="${1:-}"
if [[ -z "$dest_repo:-" ]]; then
  dest_repo=${HOME}/src/github.com/GoogleCloudPlatform/k8s-config-connector
fi
dest_cmd=${dest_repo}/dev/tools/controllerbuilder

instruction=$(< ${INSTRUCTION_PATH}) # read the file content

resource="${2:-}"

instruction=$(cat << EOF
Remember GCLOUD_COMMAND="gcloud ${resource}"
Remember the current directory is "${REPO_ROOT}/mockgcp"

If you need to create a directory, you can run `mkdir -p ${DIR}/YOUR_DIRECTORY`

${instruction}
EOF
)

output=$($dest_cmd/tasks/codebot ${instruction} 2>&1)
if [[ $? -ne 0 ]]; then
  echo  "run codebot failed: $output"
  exit 1
fi

