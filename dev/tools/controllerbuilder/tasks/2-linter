#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
 
linterOut=$(golangci-lint run --fast ${REPO_ROOT}/apis/bigtable/v1beta1/table_types.go 2>&1) || true

output=$(go run . prompt --src-dir="${REPO_ROOT}" --proto-dir="${REPO_ROOT}/dev/tools/proto-to-mapper/third_party/googleapis/" --output="${REPO_ROOT}/.generate" <<EOF
// +kcc:proto=${PROTO} 
// +kcc:no-linter-error:${linterOut}
EOF
2>&1)

last_line="${output##*$'\n'}"

echo "Output is cached to $last_line"
mv ${last_line} ${last_line}-${PROTO,,}-linter

# TODO: auto build dest-file based on PROTO and KIND
while read line
do
  echo "$line"
done < "${1:-/dev/stdin}"

go run . apply --src-file="${last_line}-${PROTO,,}-linter" --dest-file=${1}
